// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model User {
  id  Int @id @default(autoincrement()) @unique
  email String @unique
  password String
  username String
  posicao String
  cep String
  rua String
  bairro String
  cidade String
  estado String
  grupos_cadastrados Grupo[]
  peladas_cadastradas Pelada[]
  times Time[]
  gols Int

  @@map("users")
}

model Grupo {
  id  Int @id @default(autoincrement()) @unique
  admin_id Int
  nome String
  descricao String
  peladas Pelada[]
  jogadores_cadastrados User[]

  @@map("grupos")
}

model Pelada {
  id  Int @id @default(autoincrement()) @unique
  grupo Grupo @relation(fields: [grupo_id], references: [id])
  grupo_id Int
  data  DateTime?
  cep String?
  rua String?
  bairro String?
  cidade String?
  estado String?
  jogadores_cadastrados User[]
  jogos Partida[]

  @@map("peladas")
}

model Partida {
  id  Int @id @default(autoincrement()) @unique
  pelada_id Int
  pelada Pelada @relation(fields: [pelada_id], references: [id])
  vencedor_id Int
  vencedor Time @relation(fields: [vencedor_id], references: [id])

  @@map("partidas")
}

model Time {
  id  Int @id @default(autoincrement()) @unique
  cor String
  jogadores User[]
  vitorias Partida[]

  @@map("times")
}
